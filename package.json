{
  "name": "@diplodoc/liquid",
  "version": "1.5.0",
  "description": "A small and fast implementation of basic Liquid syntax for processing YFM (Yandex Flavored Markdown) documents",
  "keywords": [
    "docs",
    "yfm",
    "liquid",
    "documentation",
    "tool",
    "tools",
    "generator"
  ],
  "engines": {
    "npm": ">=11.5.1"
  },
  "homepage": "https://github.com/diplodoc-platform/liquid#readme",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/liquid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/liquid.git"
  },
  "license": "MIT",
  "author": "YFM Team <yfm-team@yandex.ru>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc -p tsconfig.transform.json",
    "dev:lib": "tsc -w -p tsconfig.transform.json",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "4",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.13.2",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/js-yaml": "^4.0.9",
    "@vitest/coverage-v8": "^2.1.9",
    "npm-run-all": "^4.1.5",
    "ts-dedent": "^2.2.0",
    "typescript": "^5.2.2",
    "vitest": "^2.1.9"
  }
}
