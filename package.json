{
  "name": "@diplodoc/liquid",
  "version": "1.0.0",
  "description": "A simple transformer of text in YFM (Yandex Flavored Markdown) to HTML",
  "keywords": [
    "docs",
    "yfm",
    "liquid",
    "documentation",
    "tool",
    "tools",
    "generator"
  ],
  "homepage": "https://github.com/diplodoc-platform/liquid#readme",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/liquid/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/liquid.git"
  },
  "license": "MIT",
  "author": "YFM Team <yfm-team@yandex.ru>",
  "main": "lib/liquid/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc -p tsconfig.transform.json",
    "dev:lib": "tsc -w -p tsconfig.transform.json",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "js-yaml": "^4.1.0",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@diplodoc/babel-preset": "^1.0.2",
    "@diplodoc/lint": "^1.2.1",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/jest": "28.1.7",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "4.14.183",
    "autoprefixer": "^10.4.15",
    "esbuild": "^0.23.1",
    "esbuild-sass-plugin": "^3.3.1",
    "jest": "28.1.3",
    "jest-serializer-html": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "ts-dedent": "^2.2.0",
    "ts-jest": "28.0.8",
    "typescript": "4.7.4"
  }
}
